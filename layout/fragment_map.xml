<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FABs -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top|right"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="Recenter"
            android:src="@drawable/ic_my_location"
            app:backgroundTint="?attr/colorSurface"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="?attr/colorPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCompass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="Compass"
            android:src="@drawable/ic_compass"
            app:backgroundTint="?attr/colorSurface"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="?attr/colorOnSurface" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSatelliteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="Satellite View"
            android:src="@drawable/ic_compass"
            app:backgroundTint="?attr/colorSurface"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="?attr/colorOnSurface" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabArMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="AR Mode"
            android:src="@drawable/ic_ar"
            android:visibility="gone"
            app:backgroundTint="?attr/colorPrimary"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="@android:color/white"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Navigation Preview Panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cornerSizeTopLeft="24dp"
        app:cornerSizeTopRight="24dp"
        app:cardElevation="16dp"
        app:strokeWidth="0dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Handle Bar -->
            <View
                android:layout_width="36dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_handle_bar" />

            <!-- Destination Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDestinationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Main Library" />

                    <TextView
                        android:id="@+id/tvDestinationDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        tools:text="Central campus library" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnClosePanel"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_close"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Route Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="450 m" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- ETA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvEta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="5 min" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Walking"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartNavigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Start Navigation"
                android:textAllCaps="false"
                android:textSize="17sp"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Active Navigation Panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/activeNavigationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:strokeWidth="0dp"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Direction Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/map_blue"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/ivDirectionIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCurrentInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="Turn left" />

                    <TextView
                        android:id="@+id/tvDistanceToNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#CCFFFFFF"
                        android:textSize="16sp"
                        tools:text="in 50 meters" />

                </LinearLayout>

            </LinearLayout>

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="8dp"
                    tools:progress="35" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvRemainingDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="320 m" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arrival"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvRemainingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="4 min" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEndNavigation"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="End"
                        android:textAllCaps="false"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>