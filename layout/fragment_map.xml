<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:id="@+id/categoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="12dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingEnd="16dp"
        android:visibility="visible">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:paddingVertical="4dp"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="All" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom|right"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabArMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="AR Mode"
            android:src="@drawable/ic_ar"
            android:visibility="gone"
            app:backgroundTint="?attr/colorPrimary"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            android:layout_marginBottom="12dp"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="Recenter"
            android:src="@drawable/ic_my_location"
            app:backgroundTint="?attr/colorSurface"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="?attr/colorPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCompass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="Compass"
            android:src="@drawable/ic_compass"
            app:backgroundTint="?attr/colorSurface"
            app:fabCustomSize="48dp"
            app:maxImageSize="24dp"
            app:tint="@null" />

    </LinearLayout>

    <include
        android:id="@+id/navigationPanel"
        layout="@layout/layout_navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <include
        android:id="@+id/activeNavigationPanel"
        layout="@layout/layout_active_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>